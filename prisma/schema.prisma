generator client {
  provider      = "prisma-client-js"
  // output        = "../src/generated/prisma"
  engineType    = "binary"
  previewFeatures = []
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Country {
  id                Int       @id @default(autoincrement())
  name              String    @unique @db.VarChar(100)
  capital           String?   @db.VarChar(100)
  region            String?   @db.VarChar(100)
  population        BigInt
  currency_code     String?   @db.Char(3)
  exchange_rate     Decimal?  @db.Decimal(65, 30)
  estimated_gdp     Decimal   @db.Decimal(65, 30)
  flag_url          String?   @db.VarChar(255)
  last_refreshed_at DateTime  @default(now()) @db.Timestamp(0)
}


